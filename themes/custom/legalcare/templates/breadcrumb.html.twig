/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{{ attach_library('bootstrap_barrio/breadcrumb') }}

{# {% if breadcrumb %}
  <nav role="navigation" aria-label="breadcrumb">
    <ol class="breadcrumb">
    {% for item in breadcrumb %}
      {% if item.url %}
        <li class="breadcrumb-item">
          <a href="{{ item.url }}">{{ item.text }}</a>
        </li>
      {% else %}
        <li class="breadcrumb-item active">
          {{ item.text }}
        </li>
      {% endif %}
    {% endfor %}
    </ol>
  </nav>
{% endif %} #}
<p class="breadcrumbs">
  {% for item in breadcrumb %}
    <span class="mr-2">
      <a href="{{ item.url }}">{{ item.text }} <i class="ion-ios-arrow-forward"></i></a>
    </span>
  {% endfor %}
  <span>{{ drupal_title() }} <i class="ion-ios-arrow-forward"></i></span>
</p>
